{% extends "../layout.njk" %}

{% block content %}

<section class="password container form">
<form method="POST" action="/users/forgot-password" >
        <div class="header">        
            <h3>Esqueceu a senha?</h3>
        </div>

        <div class="fields">
            <div class="item">
                <div>E-mail</div>

                    <div class="input">
                        <input type="email" name="email" id="email"
                        placeholder="Digite o e-mail cadastrado"
                        onblur="Validate.apply(this,'isEmail')"
                        value={{user.email}}
                        >
                    </div>  
                </div>
            </div>
        </div>
    
        <button class="button" type="submit">Recuperar senha</button>
      
</form>
</section>
{% endblock content %}