{% extends "../layout.njk" %}

{% import "parts/card.njk" as card %}

{% block content %}

{% call card.render('Editar Produto', 'container form')%}

<form method="POST" action="/products?_method=PUT" enctype="multipart/form-data">
 
        <div class="fields">
             {% include 'products/fields.njk' %}
             <input type="hidden" name="id" value={{ product.id }}>
        </div>
    
             <button class="button edit" type="submit" onclick="Validate.isAllFields(event)">Atualizar</button>
</form>
 <form id="form-delete" action="/products?_method=DELETE" method="post">
            <input type="hidden" name="id" id="id" value={{product.id}}>
            <button class="button delete" type="submit">Deletar</button>
        </form>

{% endcall %}
{% import "../confirmation.njk" as util %}
{{ util.message('Deseja deletar ?') }}
{% endblock content %}