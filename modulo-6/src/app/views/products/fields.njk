<div class="item">
    <div>Categoria</div>
    <div>
        <select name="category_id" id="category_id">
        <option value="" selected >Selecione</option>
        {% for category in categories %}
            <option {% if product.category_id == category.id  %}
            selected
            {% endif %}  value="{{category.id}}" >{{ category.name }}</option>
        {% endfor %}                    
        </select>
    </div>
</div>

<div class="item">
    <div>Nome</div>
        <div><input type="text" name="name" id="name"
        placeholder="Digite o Título do Anúncio"
        value="{{product.name}}"
        ></div>
    </div>
</div>
<div class="item">
    <div>Descrição</div>
    <div>
        <textarea type="text" name="description" id="description"
        placeholder="Descrição do Anúncio"
        value="{{product.description}}"
        ></textarea>
    </div>
</div>

{# Campo de foto #}

<div class="item">
    <div>Valor</div>
    <div>
        <input type="text" name="price" id="price"
        placeholder="Preço do Produto"
        value="{{product.description}}"
        onkeydown="Mask.apply(this, 'formatBRL');"
        >
    </div>
    {% if product.old_price %}
    <input type="hidden" name="old_price" value={{product.old_price}}>
    {% endif %}
</div>


<div class="item">
    <div>Quantidade</div>
        <div><input type="number" name="quantity" id="quantity"
        placeholder="Estoque Disponível"
        value="{{product.quantity}}"
        ></div>
    </div>
</div>
{% if product.status %}
    <div class="item">
        <div>Dsiponível</div>
        <div>
            <span><input type="radio" name="status" checked 
            value="M" {% if member.gender == "1" %}
            checked
            {% endif %}>Sim</span>
            <span><input type="radio" name="status" value="0"
            {% if member.gender == "0" %}
            checked
            {% endif %}
            >Não</span>
        </div>
    </div>
{% endif %}