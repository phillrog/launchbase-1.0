{% extends "../layout.njk" %}

{% block content %}
<section class="shop container">
    <h2>Ãšltimos Produtos</h2>
    <div class="items">
        {% for product  in products %}
            <div class="product">
                <div class="image"
                    {% if product.img %}
                        style="background: url('{{product.img}}');"
                    {% else %}
                        style="background: url('//placehold.it/500x500?text=Produto sem imagem');"
                    {% endif %}
                >
                {% if product.price  != product.oldPrice %}
                <p>{{product.oldPrice}}</p>
                {% endif %}
                <p>{{product.price}}</p>
                <h4>{{product.name}}</h4>
                <a href="/products/{{product.id}}" class="button">Ver Produto</a>
                </div>

            </div>
        {% endfor %}
    </div>
</section>

{% endblock content %}