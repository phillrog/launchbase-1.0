
<div class="item">
    <div>Nome Completo</div>
        <div class="input"><input type="text" name="name" id="name"
        placeholder="Digite seu nome completo"
        value="{{user.name}}"
        required
        >
    </div>
</div>

<div class="item">
    <div>E-mail</div>
        <div class="input"><input type="email" name="email" id="email"
        placeholder="Digite seu e-mail"
        value="{{user.email}}"
        onblur="Validate.apply(this,'isEmail')"
        >
    </div>  
    
</div>

<div class="item">
    <div>Senha</div>
        <div class="input"><input type="password" name="password" id="password"
        {% if not user.id %}
            placeholder="Escolha uma senha segura"
        {% else %}
            placeholder="Digite sua senha para atualizar seu cadastro"
        {% endif %}
        
        ></div>
</div>

{% if not user.id %}

<div class="item">
    <div>Repetir Senha</div>
        <div class="input"><input type="password" name="passwordRepeat" id="Repeat"
        placeholder="Repita a senha escolhida"
        
        ></div>
</div>

{% endif %}



<div class="item">
    <div>CPF ou CNPJ</div>
        <div class="input"><input type="text" name="cpf_cnpj" id="cpf_cnpj"
        placeholder="Digite seu documento"
        value="{{user.cpf_cnpj}}"
        onkeydown="Mask.apply(this, 'cpfCnpj')"
        onblur="Validate.apply(this,'isCpfCnpj')"
        ></div>
</div>

<div class="item">
    <div>CEP</div>
        <div class="input"><input type="text" name="cep" id="cep"
        placeholder="99999-999"
        value="{{user.cep}}"
        onkeydown="Mask.apply(this, 'cep')"
        onblur="Validate.apply(this,'isCep')"
        ></div>
</div>

<div class="item">
    <div>Endereço Completo</div>
        <div class="input"><input type="text" name="address" id="address"
        placeholder="Digite seu endereço completo"
        value="{{user.cep}}"
        ></div>
</div>