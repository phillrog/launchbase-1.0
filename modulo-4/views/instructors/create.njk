{% extends "../layout.njk" %}

{% block content %}
<form class="card" method="POST" action="/instructors">
    <section class="avatar" style="background: url(https://source.unsplash.com/collection/1509083/500x500) no-repeat center center / cover"></section>
    <section class="details" >
        <h3>Novo Instrutor</h3>
        <div class="item">
            <div>Avatar URL</div>
            <div><input type="url" name="avatar_url" id="avatar_url"
            placeholder="http://"
            ></div>
        </div>
        <div class="item">
            <div>Instrutor</div>
            <div><input type="text" name="name" id="name"
            placeholder="Nome do instrutor"
            ></div>
        </div>
        <div class="item">
            <div>Data de nascimento</div>
            <div><input type="date" name="bith" id="birth"></div>
        </div>
        <div class="item">
            <div>Sexo</div>
            <div>
                <span><input type="radio" name="gender" checked id="M">Masculino</span>
                <span><input type="radio" name="gender" id="F">Feminino</span>
            </div>
        </div>
        <div class="item">
            <div>Área de atuação</div>
            <div>
                <input type="text" name="services" id="services"
                placeholder="Separe os serviços prestados por vírgula">
            </div>
        </div>
         <button type="submit">Salvar</button>
    </section>
</form>
{% endblock content %}