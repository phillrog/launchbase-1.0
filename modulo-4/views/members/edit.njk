{% extends "../layout.njk" %}

{% block content %}
<div class="card">
<section class="avatar" style="background: url(https://source.unsplash.com/collection/1509083/500x500) no-repeat center center / cover"></section>
    <section class="details" >

        <form id="form-edit"  method="POST" action="/members?_method=PUT">
            
                <h3>Editar Instrutor</h3>
                
                {% include 'members/fields.njk' %}

                <input type="hidden" name="id" id="id" value="{{instructor.id}}">
                

        </form>

        <form id="form-delete" action="/instructors?_method=DELETE" method="post">
            <input type="hidden" name="id" id="id" value="{{instructor.id}}">
            <button type="submit">Deletar</button>
        </form>
    </section>
</div>

{% endblock content %}