<div class="item">
        <div>Avatar URL</div>
            <div><input type="url" name="avatar_url" id="avatar_url"
            placeholder="http://"
            value="{{Member.avatar_url}}"
            ></div>
        </div>
        <div class="item">
            <div>Nome</div>
            <div><input type="text" name="name" id="name"
            placeholder="Nome do membro"
            value="{{Member.name}}"
            ></div>
        </div>
                <div class="item">
            <div>E-mail</div>
            <div><input type="email" name="email" id="email"

            value="{{Member.email}}"
            ></div>
        </div>
        <div class="item">
            <div>Data de nascimento</div>
            <div><input type="date" name="birth" id="birth"
            value="{{member.birth}}"
            ></div>
        </div>
        <div class="item">
            <div>Sexo</div>
            <div>
                <span><input type="radio" name="gender" checked 
                value="M" {% if Member.gender == "M" %}
                checked
                {% endif %}>Masculino</span>
                <span><input type="radio" name="gender" value="F"
                {% if Member.gender == "F" %}
                checked
                {% endif %}
                >Feminino</span>
            </div>
        </div>
        <div class="item">
            <div>Tipo snagu√≠neo</div>
            <div>
                <select name="blood" id="blood">
                    <option value="A1" {% if member.blood == "A1" %}selected {% endif%}>A+</option>
                    <option value="A0" {% if member.blood == "A0" %}selected {% endif%}>A-</option>
                    <option value="B1" {% if member.blood == "B1" %}selected {% endif%}>B+</option>
                    <option value="B0" {% if member.blood == "B0" %}selected {% endif%}>B-</option>
                    <option value="AB1"{% if member.blood == "AB1" %}selected {% endif%}>AB+</option>
                    <option value="AB0"{% if member.blood == "AB0" %}selected {% endif%}>AB-</option>
                    <option value="O1" {% if member.blood == "O1" %}selected {% endif%}>O+</option>
                    <option value="O0" {% if member.blood == "O0" %}selected {% endif%}>O-</option>
                </select>
            </div>
        </div>
        <div class="item">
            <div>Peso (kg)</div>
            <div>
                <input type="number" name="weight" id="weight" 
                value="{{member.weight}}">
            </div>
        </div>
        <div class="item">
            <div>Altura (cm)</div>
            <div>
                <input type="number" name="height" id="height" 
                value="{{member.height}}">
            </div>
        </div>
         <button type="submit">Salvar</button>